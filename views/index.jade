extends layout

block content
  div.map_container(ng-controller="map_controller")
    div.google-map.affix(
      center="map.center",
      zoom="map.zoom",
      options="map.options"
      draggable="true")

  div.header
    h1.text-center Phuket IT meetups
    p.text-center.lead Every week, different place, new ideas.

  div.content
    div.blog
      - var posts = getPosts(0,5)
      - var page  = 1
      - each post in posts
        include includes/postSnippet